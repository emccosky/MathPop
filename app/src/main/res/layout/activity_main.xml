<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mccosky.mathpop.MainActivity">

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="95dp"
        android:textSize="30dp"
        android:text="Addition"
        android:onClick="setAdd"/>

    <Button
        android:id="@+id/multButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        android:textSize="30dp"
        android:text="Multiplication"
        android:onClick="setMult"/>

    <Button
        android:id="@+id/easyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="130dp"
        android:background="#3b89ff"
        android:textSize="30dp"
        android:text="Easy"
        android:onClick="setEasy"/>

    <Button
        android:id="@+id/medButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginStart="115dp"
        android:background="#3b89ff"
        android:textSize="30dp"
        android:text="Medium"
        android:onClick="setMed"/>

    <Button
        android:id="@+id/hardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="130dp"
        android:background="#3b89ff"
        android:textSize="30dp"
        android:text="Hard"
        android:onClick="setHard"/>

    <Button
        android:id="@+id/mode1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginStart="110dp"
        android:background="#ffa03b"
        android:textSize="30dp"
        android:text="# out of"
        android:onClick="setMode1"/>

    <Button
        android:id="@+id/mode2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginStart="80dp"
        android:background="#ffa03b"
        android:textSize="30dp"
        android:text="Countdown"
        android:onClick="setMode2"/>
    <Button
        android:id="@+id/mode3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginStart="115dp"
        android:background="#ffa03b"
        android:textSize="30dp"
        android:text="infinite"
        android:onClick="setMode3"/>

</RelativeLayout>
